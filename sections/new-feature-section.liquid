{% schema %}
    {
      "name": "Feature Section",
      "settings": [
        {
          "type": "select",
          "id": "featured_product1",
          "label": "Select a Product",
          "options" :[  
                {
                "value": "pick_a_wood_finish",
                "label": "Finish"
              }
            ]
           

        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Button Text"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Button Link"
        },
        {
          "type": "text",
          "id": "feature1",
          "label": "Feature Point 1"
        },
        {
          "type": "text",
          "id": "feature2",
          "label": "Feature Point 2"
        },
        {
          "type": "text",
          "id": "feature3",
          "label": "Feature Point 3"
        },
        {
          "type": "text",
          "id": "feature4",
          "label": "Feature Point 4"
        },
        {
          "type": "text",
          "id": "feature5",
          "label": "Feature Point 5"
        }
      ],
      "presets": [
        {
          "category": "Custom",
          "name": "Feature Section",
          "settings": {
            "featured_product1": "",
            "cta_text": "Shop Now",
            "cta_link": "#",
            "feature1": "Feature 1",
            "feature2": "Feature 2",
            "feature3": "Feature 3",
            "feature4": "Feature 4",
            "feature5": "Feature 5"
          }
        }
      ]
    }
    {% endschema %}
    
    {% if section.settings.featured_product1 %}
      <div class="feature-section">
        <div class="product-info">
          <img src="{{ section.settings.featured_product1 | product_img_url: 'medium' }}" alt="Product Image">
          <h2>{{ section.settings.featured_product1 | product_title }}</h2>
        </div>
        <ul class="feature-points">
          {% for i in (1..5) %}
            {% assign feature = 'feature' | append: i %}
            {% if section.settings[feature] != blank %}
              <li>{{ section.settings[feature] }}</li>
            {% endif %}
          {% endfor %}
        </ul>
        <a href="{{ section.settings.cta_link }}" class="cta-button">{{ section.settings.cta_text }}</a>
      </div>
    {% endif %}
    
    {% stylesheet %}
      {{ 'feature-section.css' | asset_url | stylesheet_tag }}
    {% endstylesheet %}
    
    {% javascript %}
      {{ 'feature-carousel.js' | asset_url | script_tag }}
    {% endjavascript %}
    